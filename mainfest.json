{
  "name": "My Bookmark",
  "version": "1.0",
  "description": "",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
